{
    "name": "chrome-extension-svelte-typescript-boilerplate",
    "description": "Boilerplate for Chrome Extension Svelte Typescript project",
    "version": "1.0.0",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/nekitcorp/chrome-extension-svelte-typescript-boilerplate.git"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "watch": "nodemon --watch src --ext js,ts,svelte --exec 'npm run build'",
        "dev:extension": "vite build --mode development --watch"
    },
    "devDependencies": {
        "@crxjs/vite-plugin": "2.0.0-beta.18",
        "@sveltejs/vite-plugin-svelte": "2.4.5",
        "@tsconfig/svelte": "5.0.2",
        "@types/chrome": "0.0.243",
        "nodemon": "^3.1.4",
        "svelte": "4.2.0",
        "svelte-check": "3.5.0",
        "svelte-preprocess": "5.0.4",
        "tslib": "2.6.2",
        "typescript": "5.2.2",
        "vite": "4.2.3"
    },
    "dependencies": {
        "svelte-persisted-store": "^0.11.0"
    }
}
